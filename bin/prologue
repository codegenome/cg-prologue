#!/usr/bin/env ruby
# -*- mode: ruby -*-

# Requires
begin
  require 'prologue'
rescue LoadError
  $:.unshift(File.dirname(__FILE__) + '/../lib') unless $:.include?(File.dirname(__FILE__) + '/../lib')
  require 'rubygems'
  require 'prologue'
end

# Setup Constants
Prologue::GEM_ROOT = File.expand_path( File.dirname( __FILE__ ) + '/../' )
Prologue::SHARED_TEMPLATE_ROOT = "#{Prologue::GEM_ROOT}/templates/shared"

# Run
Prologue::CLI.start

